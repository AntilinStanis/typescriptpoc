{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
 
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["node"],
 
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
 
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}